@{
    ViewBag.Title = "No Case File Yet";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<section>
    <div class="container-fluid px-0">
        <div class="bg-white mb-5 p-2 shadow" style="border-radius:10px;">
            <div class="row">
                <div class="col-2 ps-4 d-flex align-items-center text-blue-green">
                    <h6>Notification Highlights</h6>
                </div>
                <div class="col px-0">
                    <div class="row mb-2">
                        <div class="col text-secondary"><strong>Pre-Filing Case</strong></div>
                        <div class="col d-flex align-items-center justify-content-end text-muted me-4"><small>[Date] [Time]</small></div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="mb-0 text-muted">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                                Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-2 pe-0 d-flex align-items-center justify-content-center">
                    <button class="btn text-secondary rounded-circle border-secondary border-2 me-4"><strong><</strong></button>
                    <button class="btn text-secondary rounded-circle border-secondary border-2"><strong>></strong></button>
                </div>
            </div>
        </div>

        <h3 class="erc-text-blue text-center mb-5">Case/Pleading</h3>

        <div class="bg-white rounded p-5" style="height:50vh;">
            <div class="border rounded p-5">
                <h6 class="text-secondary text-center m-5">There is no existing file yet.</h6>
                <a href="@Url.Action("Edit", "RequestSealingAcceptance")">
                    <div class="hover border rounded p-3 mx-auto my-5 text-center" style="width: 20%;">
                        <small class="text-secondary">
                            <i class="fa-solid fa-plus p-1 me-1 rounded-circle" style="border: solid 1px #20bfa1; color: #20bfa1;"></i>
                            Add a Case File
                        </small>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<style type="text/css">
    .hover {
        transition: all 0.3s ease-in-out;
    }

        .hover:hover {
            transform: scale(1.02);
            box-shadow: 0 0 8px #5069b1 !important;
        }

    .erc-text-blue {
        color: #6f83bc;
    }

    .my-badge {
        padding: 1px 10px;
        border-radius: 50%;
        color: white;
    }

    .bg-pink {
        background: #ff7d7d;
    }

    .bg-violet {
        background: #745bb3;
    }

    .bg-blue-green {
        background: #499bb3;
    }

    .bg-moss-green {
        background: #b3aa40;
    }

    .text-blue-green {
        color: #499bb3;
    }

    .text-dark-brown {
        color: #646464;
    }

    .text-gold {
        color: #b38b64;
    }

    a {
        color: inherit !important;
    }

    #main {
        background: #dbdfea;
        border-top: solid 3px #e4e8f4;
        min-height: 100vh;
    }

    .cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .card {
        border: 0;
        border-radius: 10px;
        min-height: 200px;
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 0 8px #5069b1 !important;
        }

    #piechart svg:nth-child(2) {
        display: none;
    }
</style>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
}
