                                        <tr>
                                            <td class="w-50 text-secondary">
                                                @Html.DisplayFor(modelItem => item.EmailAddress)
                                            </td>
                                            <td class="text-center">
                                                @if (item.IsVerified)
                                                {
                                                    <span class="label label-success m-1">Verified</span>
                                                }
                                                else
                                                {
