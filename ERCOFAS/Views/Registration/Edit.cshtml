                                        @if (Model.MobileNumbers != null)
                                        {
                                            foreach (var item in Model.MobileNumbers.Where(x => x.IsVerified))
                                            {
                                                <li>@Html.DisplayFor(modelItem => item.MobileNumber)</li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
