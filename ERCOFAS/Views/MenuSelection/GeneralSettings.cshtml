@model ERCOFAS.Models.TotalCountViewModel
@{
    ViewBag.Title = "Case/Pleading";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
    ViewBag.Title = "General Settings - Menu Selection";
}

<section>
    <div class="container-fluid px-0">
        <div class="bg-white mb-5 p-2 shadow" style="border-radius:10px;">
            <div class="row">
                <div class="col-2 ps-4 d-flex align-items-center text-blue-green">
                    <h6>Notification Highlights</h6>
                </div>
                <div class="col px-0">
                    <div class="row mb-2">
                        <div class="col text-secondary"><strong>Pre-Filing Case</strong></div>
                        <div class="col d-flex align-items-center justify-content-end text-muted me-4"><small>[Date] [Time]</small></div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="mb-0 text-muted">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                                Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-2 pe-0 d-flex align-items-center justify-content-center">
                    <button class="btn text-secondary rounded-circle border-secondary border-2 me-4"><strong><</strong></button>
                    <button class="btn text-secondary rounded-circle border-secondary border-2"><strong>></strong></button>
                </div>
            </div>
        </div>

        <h3 class="erc-text-blue text-center mb-5">General Settings</h3>

        <div class="row mb-4">
            <div class="col">
                <a href="@Url.Action("index","settings")">
                    <div class="card shadow hover-effect">
                        <div class="p-2">
                            <span class="my-badge bg-violet float-end text-white">1</span>
                        </div>
                        <div class="card-body text-center">
                            <div class="mb-2">
                                <img width="50" src="~/Assets/gen-set-icons/System Settings.png">
                            </div>
                            <div class="text-gold">
                                System Settings
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="@Url.Action("underconstruction","general")">
                    <div class="card shadow hover-effect">
                        <div class="p-2">
                            <span class="my-badge bg-violet float-end text-white">
                                @Model.TotalNotificationTypes
                            </span>
                        </div>
                        <div class="card-body text-center">
                            <div class="mb-2">
                                <img width="50" src="~/Assets/gen-set-icons/Notification Type.png">
                            </div>
                            <div class="text-gold">
                                Notification Types
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="@Url.Action("underconstruction","general")">
                    <div class="card shadow hover-effect">
                        <div class="p-2">
                            <span class="my-badge bg-violet float-end text-white">
                                @Model.TotalNotificationTemplates
                            </span>
                        </div>
                        <div class="card-body text-center">
                            <div class="mb-2">
                                <img height="50" src="~/Assets/gen-set-icons/Notification Template.png">
                            </div>
                            <div class="text-gold">
                                Notification Templates
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col">
                <a href="@Url.Action("index","casetype")">
                    <div class="card shadow hover-effect">
                        <div class="p-2">
                            <span class="my-badge bg-violet float-end text-white">
                                @Model.TotalCaseTypes
                            </span>
                        </div>
                        <div class="card-body text-center">
                            <div class="mb-2">
                                <img width="50" src="~/Assets/gen-set-icons/Case Type.png">
                            </div>
                            <div class="text-gold">
                                Case Types
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="@Url.Action("index","casenature")">
                    <div class="card shadow hover-effect">
                        <div class="p-2">
                            <span class="my-badge bg-violet float-end text-white">
                                @Model.TotalCaseNatures
                            </span>
                        </div>
                        <div class="card-body text-center">
                            <div class="mb-2">
                                <img width="50" src="~/Assets/gen-set-icons/Case Nature.png">
                            </div>
                            <div class="text-gold">
                                Case Natures
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="@Url.Action("Index","RERClassification")">
                    <div class="card shadow hover-effect">
                        <div class="p-2">
                            <span class="my-badge bg-violet float-end text-white">
                                @Model.TotalRERClassification
                            </span>
                        </div>
                        <div class="card-body text-center">
                            <div class="mb-2">
                                <img width="50" src="~/Assets/gen-set-icons/Case Nature.png">
                            </div>
                            <div class="text-gold">
                                RER Classifications
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<style type="text/css">
    .erc-text-blue {
        color: #6f83bc;
    }

    .my-badge {
        padding: 1px 10px;
        border-radius: 50%;
        color: white;
    }

    .bg-pink {
        background: #ff7d7d;
    }

    .bg-violet {
        background: #745bb3;
    }

    .bg-blue-green {
        background: #499bb3;
    }

    .bg-moss-green {
        background: #b3aa40;
    }

    .text-blue-green {
        color: #499bb3;
    }

    .text-dark-brown {
        color: #646464;
    }

    .text-gold {
        color: #b38b64;
    }

    a {
        color: inherit !important;
    }

    .cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .card {
        border: 0;
        min-height: 200px;
    }

    #piechart svg:nth-child(2) {
        display: none;
    }
</style>
