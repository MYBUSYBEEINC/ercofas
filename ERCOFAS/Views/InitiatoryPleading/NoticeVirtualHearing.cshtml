@{
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
    ViewBag.Title = "Notice of Virtual Hearing";
}

<section>
    <div class="container-fluid px-0">
        <div class="bg-white mb-5 p-2 shadow rounded">
            <div class="row">
                <div class="col-2 ps-4 d-flex align-items-center text-blue-green">
                    <h6>Notification Highlights</h6>
                </div>
                <div class="col px-0">
                    <div class="row mb-2">
                        <div class="col text-secondary"><strong>Pre-Filing Case</strong></div>
                        <div class="col d-flex align-items-center justify-content-end text-muted me-4"><small>[Date] [Time]</small></div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="mb-0 text-muted">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                                Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-2 pe-0 d-flex align-items-center justify-content-center">
                    <button class="btn text-secondary rounded-circle border-secondary border-2 me-4"><strong><</strong></button>
                    <button class="btn text-secondary rounded-circle border-secondary border-2"><strong>></strong></button>
                </div>
            </div>
        </div>

        <h3 class="text-mauve text-center mb-5">Notice of Virtual Hearing</h3>

        <div class="row">
            <div class="col">
                <div class="bg-white shadow rounded pb-3 pt-5">
                    <div class="d-flex justify-content-center mb-5">
                        <small class="text-muted">
                            <strong>Note: </strong>Please ensure that the file names of the soft/electronic copies of the application/petitions, annexes, other supporting documents, pre-filing requirements are the same as the document title.
                            <br />
                            <span style="margin-left:3%;">You may upload files  in PDF or jpeg format.</span>
                        </small>
                    </div>

                    <div class="d-flex flex-column justify-content-center text-secondary px-5 mx-5">
                        <div class="mb-4">
                            <label class="form-label">
                                1. Date and Time of Hearing
                            </label>
                            <div class="d-flex gap-2">
                                <div class="w-25">
                                    <label class="form-label">Date</label>
                                    <input type="date" class="form-control  text-secondary">
                                </div>
                                <div class="w-25">
                                    <label class="form-label">Time</label>
                                    <input type="time" class="form-control  text-secondary">
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="formFile" class="form-label">
                                2. Venue of Hearing
                            </label>
                            <div class="input-container">
                                <i class="fa fa-location-dot"></i>
                                <input class="form-control text-secondary" type="text">
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="formFile" class="form-label">
                                3. Online Platform that will be used for the hearing
                            </label>
                            <div class="input-container">
                                <i class="fa fa-video"></i>
                                <input class="form-control text-secondary" type="text">
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1" class="mb-1">4. Procedure on how to access the said online platform</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="formFile" class="form-label">
                                5. Upload Initial Order
                            </label>
                            <input class="form-control text-secondary mb-2" type="file">

                        </div>
                        <div class="mb-4">
                            <label for="formFile" class="form-label">
                                6. Upload more files
                            </label>
                            <input class="form-control text-secondary mb-2" type="file">

                        </div>
                        <div class="mb-4">
                            <label for="formFile" class="form-label">
                                7. Additional Information <small>(if any)</small>
                            </label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
                        </div>
                        <div class="mb-4">
                            <label for="formFile" class="form-label">
                                8. Remarks <small>(if any)</small>
                            </label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
                        </div>
                        @*<div>
                                <i class="fa fa-plus rounded bg-mauve text-white p-1"></i><input type="button" value="Upload more" class="rounded border-0 bg-transparent text-mauve" />
                            </div>*@
                    </div>

                    <div class="justify-content-center m-5 d-flex gap-2">
                        <input type="button" class="rounded border-0 bg-light-mauve text-white py-1 px-3 hover-effect" value="Back" onclick="location.href='@Url.Action("Index", "InitiatoryPleading")'" />
                        <input type="button" class="rounded border-0 bg-mauve text-white py-1 px-3 hover-effect" value="Send" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style type="text/css">
    .input-container {
        position: relative;
    }

        .input-container input[type="text"] {
        }

        .input-container i {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #000; /* adjust the color based on your preference */
            font-size: 16px; /* adjust the size based on your preference */
        }
</style>